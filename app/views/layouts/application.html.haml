!!!
%html
  %head
    %title Blurt, a multiplayer word association game
    
    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    = javascript_include_tag "application"
    = enable_typekit 'ejj0imh'
    
    = csrf_meta_tags
    
  %body
    #content
      = yield

    %script{:charset => "utf-8", :type => "text/javascript"}
      = "window.form_authenticity_token = '#{form_authenticity_token}';"
      = "window.env = '#{Rails.env}';"